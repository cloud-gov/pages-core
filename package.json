{
  "name": "federalist",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "dependencies": {
    "async": "^1.4.2",
    "autoprefixer": "^6.5.1",
    "aws-sdk": "^2.1.36",
    "bcryptjs": "^2.1.0",
    "cfenv": "^1.0.0",
    "codemirror": "^5.6.0",
    "connect-redis": "1.4.5",
    "core-js": "^2.4.1",
    "db-migrate": "^0.9.17",
    "ejs": "~0.8.4",
    "express-force-ssl": "^0.2.12",
    "github": "^0.2.4",
    "grunt": "0.4.2",
    "grunt-cli": "^0.1.13",
    "include-all": "~0.1.3",
    "keymirror": "^0.1.1",
    "lodash.isequal": "^4.4.0",
    "mime": "^1.3.4",
    "moment": "^2.10.3",
    "newrelic": "^1.22.0",
    "node-pre-gyp": "^0.6.30",
    "passport": "^0.2.1",
    "passport-github": "^0.1.5",
    "passport-local": "^1.0.0",
    "pg": "^4.4.0",
    "prosemirror": "^0.8.3",
    "rc": "~0.5.0",
    "request": "^2.61.0",
    "s3": "^4.4.0",
    "sails": "~0.11.0-rc8",
    "sails-db-migrate": "^0.7.0",
    "sails-disk": "~0.10.0",
    "sails-postgresql": "^0.10.15",
    "socket.io-redis": "^0.1.4",
    "underscore": "^1.8.3",
    "validator": "^3.39.0",
    "whatwg-fetch": "^1.0.0",
    "yamljs": "^0.2.8"
  },
  "scripts": {
    "preinstall": "npm run debug:fileSizeInMB",
    "postinstall": "npm run debug:fileSizeInMB && npm run uswds && npm run codemirror && npm run migrate:up",
    "build": "npm run browserify && npm run sass && npm run autoprefixer",
    "start": "node app.js",
    "debug": "node debug app.js",
    "browserify": "browserify assets/app/main.js -o assets/js/bundle.js -t [ babelify --presets [ es2015 react stage-2 ] ]",
    "sass": "node-sass assets/styles/styles.scss -o assets/styles",
    "autoprefixer": "postcss --use autoprefixer -r assets/styles/styles.css",
    "watch": "npm run uswds && node app.js & npm run watch:client",
    "watch:server": "nodemon app.js --ignore assets/app --ignore .tmp/ --ignore node_modules/",
    "watch:client": "npm run watch:client:sass & npm run watch:client:autoprefix & npm run watch:client:js",
    "watch:client:sass": "node-sass -w -r assets/styles/*.scss -o assets/styles",
    "watch:client:autoprefix": "npm run sass && postcss --use autoprefixer -r -w assets/styles/styles.css assets/styles/styles.css",
    "watch:client:js": "watchify assets/app/main.js -o assets/js/bundle.js -t [ babelify --presets [ es2015 react stage-2 ] ]",
    "test": "npm run build && npm run test:server && npm run test:client",
    "test:server": "NODE_ENV=test mocha --timeout 60000 test/api/bootstrap.test.js test/api/unit/**/*.test.js",
    "test:client": "mocha --compilers js:babel-register --recursive ./test/client",
    "test:client:watch": "watch 'npm run test:client' ./assets/app ./test/client",
    "coverage:client": "istanbul cover _mocha -- --compilers js:babel-register --recursive ./test/client",
    "lint": "eslint ./**",
    "migrate:create": "grunt db:migrate:create",
    "migrate:up": "grunt db:migrate:up || true",
    "migrate:down": "grunt db:migrate:down",
    "debug:fileSizeInMB": "./scripts/debug-directory-size.sh",
    "uswds": "npm run debug:fileSizeInMB; if [ -d ./node_modules/uswds ]; then npm run uswds:css && npm run uswds:images && npm run uswds:fonts; fi",
    "uswds:css": "mv -v node_modules/uswds/dist/css/uswds.css ./assets/styles/",
    "uswds:images": "mv -v node_modules/uswds/dist/img/ ./assets/images/uswds",
    "uswds:fonts": "mv -v node_modules/uswds/dist/fonts/* ./assets/fonts",
    "codemirror": "mv -v node_modules/codemirror/lib/codemirror.css ./assets/styles/",
    "export:sites": "node ./scripts/exportSitesAsCsv.js"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/18f/federalist.git"
  },
  "author": "dhcole",
  "license": "Public Domain",
  "devDependencies": {
    "browserify": "^10.2.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.16.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "classname": "0.0.0",
    "chai": "^3.5.0",
    "enzyme": "^2.4.1",
    "eslint": "^2.7.0",
    "istanbul": "^1.1.0-alpha.1",
    "json-to-csv": "^1.0.0",
    "mocha": "2.3.4",
    "nodemon": "^1.3.7",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.3.2",
    "proxyquire": "^1.7.10",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^2.4.1",
    "redux": "^3.5.2",
    "react-addons-test-utils": "^15.3.1",
    "sinon": "1.17.2",
    "uswds": "^0.9.0",
    "watch": "^0.19.2",
    "watchify": "^3.2.2"
  },
  "engines": {
    "node": "4.2.3",
    "npm": "2.15.9"
  }
}
