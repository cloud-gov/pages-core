{% extends "base.njk" %}
{% block main_content %}
  <div>
    <section class="grid-container usa-section">
      <div class="grid-row flex-justify-center">
        <div class="grid-col-12 tablet:grid-col-8 desktop:grid-col-6">
          <div class="bg-white padding-y-3 padding-x-5 border border-base-lighter">
            <div class="display-flex flex-column flex-align-center">
              <img class="width-card height-auto" src="/images/logos/pages-horizontal.svg" alt="Pages Logo"/>
              <div class="usa-alert usa-alert--info margin-y-4">
                <div class="usa-alert__body">
                  <h4 class="usa-alert__heading">Notice</h4>
                  <p class="text-semibold font-sans-xs mobile-lg:font-sans-md">
                    This is a U.S. government service.
                    Your use indicates your consent to monitoring,
                    recording, and no expectation of privacy.
                    Misuse is subject to criminal and civil penalties.
                    <a href="/system-use">Read more details.</a>
                  </p>
                </div>
              </div>
              <a href="/login" class="usa-button usa-button--big">
                Login with cloud.gov
              </a>
            </div>
          </div>
          <div class="display-flex flex-column flex-align-center padding-4">
            <p class="text-italic text-base-darker">
              Are you interested in setting up a Pages account? <a class="usa-link" href="mailto:{{ supportEmail }}">Reach out to setup a sandbox.</a>
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
{% endblock %}
