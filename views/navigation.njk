{% block navigation %}
  <header class="usa-header usa-header-basic" role="banner">
    <div class="usa-nav-container">
      <div class="usa-navbar">
        <div class="usa-logo" id="basic-logo">
          <em class="usa-logo-text">
            <a href="/" title="Home" aria-label="Home">Federalist</a>
          </em>
        </div>
        <button class="usa-menu-btn">Menu</button>
      </div>

      <nav role="navigation" class="usa-nav">
        <button class="usa-nav-close">
          <img src="/images/close.svg" alt="close">
        </button>
        <ul class="usa-nav-primary">
          {% if not isAuthenticated %}
            <li>
              <a class="usa-nav-link" href="/features/" rel="noopener noreferrer">
                <span>Features</span>
              </a>
            </li>
            <li>
              <a class="usa-nav-link" href="/content/examples/" rel="noopener noreferrer">
                <span>Example sites</span>
              </a>
            </li>
            <li>
              <a class="usa-nav-link" href="https://federalist-docs.18f.gov" target="_blank" rel="noopener noreferrer">
                <span>Support</span>
              </a>
            </li>
            <li>
              <a class="usa-nav-link" href="/contact/" rel="noopener noreferrer">
                <span>Contact<span>
              </a>
            </li>
            <li  class="nav-action">
              <a href="/auth/github" class="usa-button usa-button-white">Log in</a>
            </li>
          {% else %}
            <li>
              <a class="usa-nav-link" href="/sites">
                <span>{{ username }}'s sites</span>
              </a>
            </li>
            <li>
              <a class="usa-nav-link" href="https://federalist-docs.18f.gov" target="_blank" rel="noopener noreferrer">
                <span>Support</span>
              </a>
            </li>
            <li>
              <a class="usa-nav-link" href="/contact/" rel="noopener noreferrer">
                <span>Contact<span>
              </a>
            </li>
            <li class="nav-action">
              <a class="usa-button usa-button-white" href="/logout">Log out</a>
            </li>
