{% block navigation %}
  <header class="usa-header usa-header-basic" role="banner">
    <div class="usa-nav-container">
      <div class="usa-navbar">
        <div class="usa-logo" id="basic-logo">
          <em class="usa-logo-text">
            <a href="/" title="Home" aria-label="Home">Federalist</a>
          </em>
        </div>
        <button class="usa-menu-btn">Menu</button>
      </div>

      <nav role="navigation" class="usa-nav">
        <button class="usa-nav-close">
          <img src="/images/close.svg" alt="close">
        </button>
        <ul class="usa-nav-primary">
          {% if isAuthenticated %}
            <li>
              <a class="usa-nav-link" href="/sites">
                <span>Sites</span>
              </a>
            </li>
          {% endif %}
          <li>
            <a class="usa-nav-link" href="{{ homepageUrl }}/documentation/">
              <span>Documentation<span>
            </a>
          </li>
          <li>
            <a class="usa-nav-link" href="{{ homepageUrl }}/contact/">
              <span>Contact<span>
            </a>
          </li>
          <li>
            <a class="usa-nav-link" href="https://federalist.statuspage.io">
              <span>Status<span>
            </a>
          </li>
          {% if isAuthenticated %}
          <li class="nav-action">
            <a class="usa-button usa-button-white" href="/logout">Log out</a>
          </li>
          {% else %}
            <li  class="nav-action">
              <a href="/login" class="usa-button usa-button-white">Log in</a>
            </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </header>
{% endblock %}
